<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="material_blue_grey_100">#CFD8DC</color>
    <color name="material_blue_grey_200">#B0BEC5</color>
    <color name="material_blue_grey_300">#90A4AE</color>
    <color name="material_blue_grey_500">#607D8b</color>
    <color name="material_blue_grey_700">#455A64</color>
    <!-- We use the same value -->
    <color name="material_blue_grey_800" tools:override="true">#37474F</color>
    <color name="material_blue_grey_900" tools:override="true">#263238</color>
    <color name="material_grey_300" tools:override="true">#ffe0e0e0</color>
    <color name="material_green_a200">#69f0ae</color>
    <color name="material_green_a700">#00C853</color>
    <color name="material_light_green_200">#c5e1a5</color>

    <!-- Theme colors -->
    <color name="primary">@color/material_blue_grey_500</color>
    <color name="primary_variant">@color/primary_darker</color>
    <color name="primary_darker">#34515e</color>
    <color name="primary_lighter">#8eacbb</color>
    <color name="secondary">@color/material_green_a700</color>
    <color name="secondary_variant">@color/secondary_darker</color>
    <color name="secondary_darker">#009624</color>
    <color name="secondary_lighter">#5efc82</color>
    <color name="color_on_primary">@android:color/white</color>
    <color name="color_on_secondary">@android:color/white</color>

    <!-- Can be used as color_surface with a primary tint in dark mode-->
    <color name="dark_color_primary_surface" tools:ignore="UnusedResources">#181a1b</color>

    <color name="unreadCounterColor">#909090</color>
    <color name="articleHeaderSeparator">#cccccc</color>
    <color name="image_scrim">#ccffffff</color>
    <color name="article_text_color">?android:textColorTertiary</color>

    <!-- Article list activity -->
    <color name="article_list_header">@color/primary_lighter</color>
</resources>
